{
    "manifest_version": 3,
    "name": "ReVex",
    "version": "1.0.0",
    "description": "Browser-based HTTP Repeater for security researchers. Capture, modify, and replay HTTP requests directly from DevTools.",
    "author": "medjahdi",
    "homepage_url": "https://github.com/medjahdi",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "devtools",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "devtools_page": "devtools/devtools.html",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "revex@medjahdi.sec",
            "strict_min_version": "142.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}